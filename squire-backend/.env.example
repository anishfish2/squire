# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# AWS S3 Configuration (for screenshot storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=squire-screenshots

# OpenAI API (for vision analysis and LLM chat)
OPENAI_API_KEY=your-openai-api-key

# Anthropic API (for Claude models in LLM chat)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI API (for Gemini models in LLM chat)
GOOGLE_API_KEY=your-google-api-key

# Server Configuration
PORT=8000
HOST=127.0.0.1
DEBUG=true

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:8000
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT=1000

# Optional: Database direct connection (if needed)
DATABASE_URL=postgresql://user:pass@host:port/dbname