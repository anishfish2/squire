{
  "name": "squire-electron",
  "version": "1.0.0",
  "description": "OCR overlay app with app focus monitoring",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "rm -rf node_modules/.vite && electron-vite dev",
    "dev:fast": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "build:css": "tailwindcss -i ./src-styles.css -o ./styles.css --minify",
    "build:css:watch": "tailwindcss -i ./src-styles.css -o ./styles.css --watch",
    "dist": "npm run build && electron-builder",
    "build-and-run": "npm run dist && open dist/mac-arm64/Squire.app"
  },
  "keywords": [
    "ocr",
    "overlay",
    "screen-capture"
  ],
  "author": "Anish Karthik",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-vite": "^4.0.1",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@loomhq/electron-click-through-workaround": "^0.0.1",
    "@paymoapp/active-window": "^2.1.2",
    "active-win": "^8.0.0",
    "axios": "^1.12.2",
    "electron-store": "^11.0.2",
    "form-data": "^4.0.4",
    "node-global-key-listener": "^0.3.0",
    "node-mac-permissions": "^2.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "screenshot-desktop": "^1.12.7",
    "socket.io-client": "^4.8.1",
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.anishkarthik.squire",
    "productName": "Squire",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "out/**/*",
      "styles.css",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/node-mac-permissions/**/*",
      "node_modules/active-win/**/*",
      "node_modules/@paymoapp/active-window/**/*",
      "node_modules/screenshot-desktop/**/*",
      "node_modules/uiohook-napi/**/*",
      "**/*.node"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "identity": "Anish Karthik (357A76Q8TB)",
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSCameraUsageDescription": "This app uses camera for OCR functionality",
        "NSMicrophoneUsageDescription": "This app may use microphone for accessibility features"
      },
      "extraFiles": [
        {
          "from": "node_modules",
          "to": "Resources/node_modules",
          "filter": [
            "**/*.node"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Squire Installer",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
